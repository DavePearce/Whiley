################
# CONFIGURATION
################

DIR=`dirname "$0"`/..
LIBDIR=$DIR/lib

# check for running under cywin
cygwin=false
case "`uname`" in
  CYGWIN*) cygwin=true ;;
esac

#################################
# PROCESS COMMAND LINE ARGUMENTS
#################################

while [ $1 ];
  do case x"$1" in        
        x-cp) shift
	 CLASSPATH=$1
	 shift ;;
	x-classpath) shift
	 CLASSPATH=$1
	 shift ;;
	x-*) echo "invalid option $1"
	 exit 1;;
	*) break;;
  esac
done

##################
# RUN APPLICATION
##################

if $cygwin; then
    # under cygwin the classpath separator must be ";"
    LIBDIR=`cygpath -pw "$LIBDIR"`
    CLASSPATH="$LIBDIR/wyrt.jar;$CLASSPATH"
else
    # under UNIX the classpath separator must be ":"
    CLASSPATH="$LIBDIR/wyrt.jar:$CLASSPATH"
fi

java -cp "$CLASSPATH" "$@"
